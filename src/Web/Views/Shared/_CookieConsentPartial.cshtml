@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <nav id="cookie-consent" class="navbar navbar-expand-lg navbar-light bg-light">
        <span class="navbar-brand"><i class="fas fa-info-circle" aria-hidden="true"></i></span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#cookie-consent .navbar-collapse" aria-expanded="false" aria-label="Toggle cookie consent banner">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <span class="navbar-text mr-auto">
                Use this space to summarize your privacy and cookie use policy.
            </span>
            <div class="navbar-right">
                <a asp-controller="Home" asp-action="Privacy" class="btn btn-info navbar-btn">Learn More</a>
                <button type="button" class="btn btn-default navbar-btn" data-cookie-string="@cookieString">Accept</button>
            </div>
        </div>
    </nav>
}